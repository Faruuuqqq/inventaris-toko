        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 302 || pm.response.code === 200) {",
                  "    pm.test('Login successful', function() {",
                  "        pm.expect(pm.response.code).to.be.oneOf([200, 302]);",
                  "    });",
                  "}"
