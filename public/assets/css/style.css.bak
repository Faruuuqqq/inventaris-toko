/* Basic Tailwind-like styles for testing */

/* Colors */
:root {
    --background: #fafafa;
    --foreground: #0f172a;
    --primary: #0ea5e9;
    --primary-foreground: #ffffff;
    --secondary: #f1f5f9;
    --secondary-foreground: #0f172a;
    --muted: #f1f5f9;
    --muted-foreground: #64748b;
    --accent: #f1f5f9;
    --accent-foreground: #0f172a;
    --destructive: #ef4444;
    --destructive-foreground: #ffffff;
    --success: #22c55e;
    --success-foreground: #ffffff;
    --warning: #f59e0b;
    --warning-foreground: #ffffff;
    --border: #e2e8f0;
    --input: #e2e8f0;
    --ring: #0ea5e9;
    --card: #ffffff;
    --card-foreground: #0f172a;
    --radius: 0.5rem;

    --sidebar-background: #0f172a;
    --sidebar-foreground: #f1f5f9;
    --sidebar-primary: #0284c7;
    --sidebar-primary-foreground: #ffffff;
    --sidebar-accent: #1e293b;
    --sidebar-accent-foreground: #f8fafc;
    --sidebar-border: #334155;
    --sidebar-ring: #0284c7;
    --sidebar-muted: #1e293b;
}

/* Basic resets */
* {
    border-color: var(--border);
}

body {
    background-color: var(--background);
    color: var(--foreground);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.5;
    margin: 0;
    padding: 0;
}

/* Flexbox utilities */
.flex {
    display: flex;
}

.flex-col {
    display: flex;
    flex-direction: column;
}

.items-center {
    display: flex;
    align-items: center;
}

.justify-center {
    justify-content: center;
}

.justify-between {
    justify-content: space-between;
}

.text-center {
    text-align: center;
}

.space-y-1 {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.space-y-2 {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.space-y-4 {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.space-x-2 {
    display: flex;
    gap: 0.5rem;
}

.gap-2 {
    gap: 0.5rem;
}

.gap-4 {
    gap: 1rem;
}

/* Width utilities */
.w-full {
    width: 100%;
}

.max-w-md {
    max-width: 400px;
}

.max-w-lg {
    max-width: 800px;
}

.min-h-screen {
    min-height: 100vh;
}

/* Height utilities */
.h-10 {
    height: 2.5rem;
}

.h-14 {
    height: 3.5rem;
}

.w-14 {
    width: 3.5rem;
}

/* Spacing utilities */
.p-4 {
    padding: 1rem;
}

.p-6 {
    padding: 1.5rem;
}

.pt-0 {
    padding-top: 0;
}

.py-2 {
    padding-top: 0.5rem;
}

.pb-0 {
    padding-bottom: 0;
}

.mb-2 {
    margin-bottom: 0.5rem;
}

.mb-4 {
    margin-bottom: 1rem;
}

.mb-6 {
    margin-bottom: 1.5rem;
}

.mb-8 {
    margin-bottom: 2rem;
}

.mt-1 {
    margin-top: 0.25rem;
}

.mt-6 {
    margin-top: 1.5rem;
}

/* Display utilities */
.inline-flex {
    display: inline-flex;
}

.whitespace-nowrap {
    white-space: nowrap;
}

/* Border utilities */
.border {
    border-width: 1px;
    border-style: solid;
    border-color: var(--border);
}

.rounded {
    border-radius: var(--radius);
}

.rounded-md {
    border-radius: 0.375rem;
}

.rounded-lg {
    border-radius: var(--radius);
}

.rounded-xl {
    border-radius: 0.75rem;
}

/* Background utilities */
.bg-background {
    background-color: var(--background);
}

.bg-primary {
    background-color: var(--primary);
}

.bg-card {
    background-color: var(--card);
}

.bg-destructive\/10 {
    background-color: rgba(239, 68, 68, 0.1);
}

/* Text utilities */
.text-foreground {
    color: var(--foreground);
}

.text-primary-foreground {
    color: var(--primary-foreground);
}

.text-2xl {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 2rem;
}

.text-sm {
    font-size: 0.875rem;
}

.text-muted-foreground {
    color: var(--muted-foreground);
}

.font-bold {
    font-weight: 700;
}

.font-semibold {
    font-weight: 600;
}

.font-medium {
    font-weight: 500;
}

.leading-none {
    line-height: 1;
}

.tracking-tight {
    letter-spacing: -0.025em;
}

/* Shadow utilities */
.shadow-sm {
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

/* Border input utility */
.border-input {
    border-color: var(--input);
}

/* Background input utility */
.bg-background {
    background-color: var(--background);
}

/* Ring utilities */
.ring-offset-background {
    box-shadow: 0 0 0 0 var(--ring);
}

/* Text input utility */
.text-base {
    font-size: 1rem;
}

/* File border utility */
.file\:border-0 {
    border-width: 0;
}

/* File bg transparent utility */
.file\:bg-transparent {
    background-color: transparent;
}

/* File text utilities */
.file\:text-sm {
    font-size: 0.875rem;
}

.file\:font-medium {
    font-weight: 500;
}

.file\:text-foreground {
    color: var(--foreground);
}

.file\:text-muted-foreground {
    color: var(--muted-foreground);
}

/* Placeholder utilities */
.placeholder\:text-muted-foreground::placeholder {
    color: var(--muted-foreground);
}

/* Focus utilities */
.focus-visible\:outline-none:focus {
    outline: none;
}

.focus-visible\:ring-2:focus {
    box-shadow: 0 0 0 3px var(--ring);
}

.focus-visible\:ring-ring:focus {
    box-shadow: 0 0 0 3px var(--ring);
}

.focus-visible\:ring-offset-2:focus {
    box-shadow: 0 0 0 3px var(--ring) 0 2px;
}

/* Disabled utilities */
.disabled\:cursor-not-allowed:disabled {
    cursor: not-allowed;
}

.disabled\:opacity-50:disabled {
    opacity: 0.5;
}

.md\:text-sm {
    font-size: 0.875rem;
}

/* Hover utilities */
.hover\:bg-primary\/90:hover {
    background-color: #0284c7;
}

/* Transition utilities */
.transition-colors {
    transition: color 0.2s ease-in-out, background-color 0.2s ease-in-out;
}

/* Mobile responsive */
@media (max-width: 640px) {
    .p-6 {
        padding: 1rem;
    }
    
    .h-14 {
        height: 3rem;
    }
    
    .w-14 {
        width: 3rem;
    }
    
    .max-w-md {
        max-width: 100%;
        padding: 0 1rem;
    }
}

/* Input styles */
input[type="text"],
input[type="password"] {
    width: 100%;
    height: 2.5rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    border: 1px solid var(--border);
    border-radius: 0.375rem;
    background-color: #ffffff;
    color: #0f172a;
    transition: all 0.2s;
}

input[type="text"]:focus,
input[type="password"]:focus {
    outline: none;
    border-color: #0ea5e9;
    box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

input[type="text"]::placeholder,
input[type="password"]::placeholder {
    color: #94a3b8;
}

/* Button styles */
button {
    width: 100%;
    height: 2.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #ffffff;
    background-color: #0ea5e9;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.2s;
}

button:hover {
    background-color: #0284c7;
}

button:active {
    transform: translateY(1px);
}

button:disabled {
    cursor: not-allowed;
    opacity: 0.5;
}

/* Form spacing */
form {
    width: 100%;
}

/* SVG Icon */
svg {
    display: block;
}

/* Error message styling */
.rounded {
    border-radius: 0.5rem;
    border: 1px solid var(--border);
}

.text-destructive {
    color: #ef4444;
}

.p-3 {
    padding: 0.75rem;
}